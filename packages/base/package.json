{
  "name": "@cosmiconfig/base",
  "version": "9.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./defaults": {
      "types": "./dist/defaults.d.ts",
      "default": "./dist/defaults.js"
    },
    "./loaders": {
      "types": "./dist/loaders.d.ts",
      "default": "./dist/loaders.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "!dist/**/*.map"
  ],
  "scripts": {
    "build": "npm run build:tsc",
    "build:tsc": "cross-env NODE_ENV=production tsc -b tsconfig.build.json",
    "clean": "tsc -b tsconfig.build.json --clean",
    "postclean": "rimraf dist && rimraf coverage",
    "dev": "npm run build:tsc -- --watch",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts . --fix",
    "test": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cosmiconfig/cosmiconfig.git"
  },
  "keywords": [
    "load",
    "configuration",
    "config"
  ],
  "author": "Daniel Fischer <daniel@d-fischer.dev>",
  "contributors": [
    "Randolf J <jrandolf@google.com>",
    "David Clark <david.dave.clark@gmail.com>",
    "Bogdan Chadkin <trysound@yandex.ru>",
    "Suhas Karanth <sudo.suhas@gmail.com>"
  ],
  "funding": "https://github.com/sponsors/d-fischer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cosmiconfig/cosmiconfig/issues"
  },
  "homepage": "https://github.com/cosmiconfig/cosmiconfig#readme",
  "dependencies": {
    "@cosmiconfig/types": "9.0.0",
    "env-paths": "^2.2.1",
    "import-fresh": "^3.3.0"
  },
  "engines": {
    "node": ">=14"
  }
}
