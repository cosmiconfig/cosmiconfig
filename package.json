{
  "name": "cosmiconfig",
  "version": "5.2.1",
  "description": "Find and load configuration from a package.json property, rc file, or CommonJS module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint:md": "remark-preset-davidtheclark --format",
    "lint:fix": "eslint . --fix",
    "lint": "eslint . && npm run lint:md",
    "format": "prettier \"**/*.{js,json,yml,yaml}\" --write",
    "pretest": "npm run lint && flow check",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage --coverageReporters=html --coverageReporters=text",
    "build": "flow-remove-types src --out-dir dist --quiet",
    "prepublishOnly": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && jest && flow check"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "remark-preset-davidtheclark --format",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidtheclark/cosmiconfig.git"
  },
  "keywords": [
    "load",
    "configuration",
    "config"
  ],
  "author": "David Clark <david.dave.clark@gmail.com>",
  "contributors": [
    "Bogdan Chadkin <trysound@yandex.ru>",
    "Suhas Karanth <sudo.suhas@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidtheclark/cosmiconfig/issues"
  },
  "homepage": "https://github.com/davidtheclark/cosmiconfig#readme",
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/*.js"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "resetModules": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "babel": {
    "plugins": [
      "transform-flow-strip-types"
    ]
  },
  "dependencies": {
    "import-fresh": "^3.0.0",
    "is-directory": "^0.3.1",
    "js-yaml": "^3.13.1",
    "parse-json": "^4.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "del": "^4.1.1",
    "eslint": "^5.16.0",
    "eslint-config-davidtheclark-node": "^0.2.2",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-flowtype": "^3.10.3",
    "eslint-plugin-jest": "22.6.4",
    "eslint-plugin-node": "^9.1.0",
    "flow-bin": "^0.101.0",
    "flow-remove-types": "^2.101.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.0",
    "make-dir": "^3.0.0",
    "parent-module": "^2.0.0",
    "prettier": "^1.18.2",
    "remark-preset-davidtheclark": "^0.10.0"
  },
  "engines": {
    "node": ">=8"
  }
}
