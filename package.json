{
  "name": "cosmiconfig",
  "version": "5.2.1",
  "description": "Find and load configuration from a package.json property, rc file, or CommonJS module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "del-cli --dot=true \"./dist/**/*\"",
    "build": "npm run clean && npm run build:compile",
    "build:compile": "cross-env NODE_ENV=production babel src -d dist --verbose --extensions .js --ignore \"**/**/*.test.js\" --source-maps",
    "dev": "npm run clean && npm run build:compile -- --watch",
    "lint": "eslint --ext .js . && npm run lint:md",
    "lint:fix": "eslint --ext .js . --fix",
    "lint:md": "remark-preset-davidtheclark --format",
    "format": "prettier \"**/*.{js,json,yml,yaml}\" --write",
    "flow": "flow",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "check:all": "npm run test && flow check && npm run lint",
    "prepublishOnly": "npm run check:all && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && flow check && npm run test",
      "pre-push": "npm run check:all"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "remark-preset-davidtheclark --format",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidtheclark/cosmiconfig.git"
  },
  "keywords": [
    "load",
    "configuration",
    "config"
  ],
  "author": "David Clark <david.dave.clark@gmail.com>",
  "contributors": [
    "Bogdan Chadkin <trysound@yandex.ru>",
    "Suhas Karanth <sudo.suhas@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidtheclark/cosmiconfig/issues"
  },
  "homepage": "https://github.com/davidtheclark/cosmiconfig#readme",
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/*.js"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "resetModules": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8.9"
          }
        }
      ],
      "@babel/preset-flow"
    ]
  },
  "dependencies": {
    "import-fresh": "^3.0.0",
    "is-directory": "^0.3.1",
    "js-yaml": "^3.13.1",
    "parse-json": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.5",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-flow": "7.0.0",
    "babel-eslint": "^10.0.1",
    "cross-env": "5.2.0",
    "del": "^4.1.1",
    "del-cli": "2.0.0",
    "eslint": "^5.16.0",
    "eslint-config-davidtheclark-node": "^0.2.2",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-flowtype": "^3.10.3",
    "eslint-plugin-jest": "22.6.4",
    "eslint-plugin-node": "^9.1.0",
    "flow-bin": "^0.101.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.0",
    "make-dir": "^3.0.0",
    "parent-module": "^2.0.0",
    "prettier": "^1.18.2",
    "remark-preset-davidtheclark": "^0.10.0"
  },
  "engines": {
    "node": ">=8"
  }
}
